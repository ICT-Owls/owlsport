{
    "extends": ["eslint:recommended"],
    "parser": "@babel/eslint-parser",
    "rules": {
        "semi": [2, "always"],
        "no-unused-vars": "warn",
        "no-tabs": "warn"
    },
    "plugins": [],
    "env": {
        "node": true,
        "es6": true
    },
    "overrides": [
      {
        "files": [ "test/**/*" ],
        "env": {
          "mocha": true
        }
      }
    ],
    "ignorePatterns": ["package-lock.json", "node_modules", "*.json"]
}

{
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "cleanUrls": true,
        "trailingSlash": false,
        "rewrites": [
            {
                "source": "/api",
                "run": {
                    "serviceId": "carpooling-backend",
                    "region": "europe-north1"
                }
            },
            {
                "source": "/**",
                "destination": "/"
            }
        ],
        "headers": [
            {
                "source": "/**",
                "headers": [
                    {
                        "key": "Access-Control-Allow-Origin",
                        "value": "*"
                    }
                ]
            },
            {
                "source": "/api/**",
                "headers": [
                    { "key": "Cache-Control", "value": "no-store, private" }
                ]
            }
        ]
    }
}

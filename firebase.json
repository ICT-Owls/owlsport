{
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "cleanUrls": true,
        "trailingSlash": false,
        "rewrites": [
            {
                "source": "/api",
                "run": {
                    "serviceId": "carpooling-backend",
                    "region": "europe-north1"
                }
            }
        ]
    }
}

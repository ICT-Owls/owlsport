{
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],

        "rewrites": [
            {
                "regex": "/user/(\d+)",
                "run": {
                    "serviceId": "carpooling",
                    "region": "europe-north1"
                }
            }
        ],
        "cleanUrls": true,
        "trailingSlash": false
    }
}
